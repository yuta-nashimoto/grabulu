---
const { pageTitle } = Astro.props;
import { siteMeta } from "../constants/";

import "../assets/scss/foundation/index.scss";
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width initialsclae=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{ pageTitle ? `${pageTitle} | ${siteMeta.subTitle}` : `${siteMeta.subTitle}`}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Kaisei+Opti&family=PT+Sans+Narrow:wght@400;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
</html>

<style lang="scss">
@use '../assets/scss/global/index.scss' as g;

body {
	background: g.$gray;
}
</style>
